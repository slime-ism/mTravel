<div class="container">
  <div class="page-header">
    <h1><%= @post.title %><small>submit by <%= @post.user.email %></small></h1>
  </div>
  <p>
  <%= @post.body %>
  </p>
  <%= link_to "Back", root_path, class: "btn btn-lg btn-default" %>
  <% if current_user == @post.user %>
    <%= link_to "Edit", edit_post_path, class: "btn btn-lg btn-primary "%>
    <%= link_to "Delete", post_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-lg btn-warning" %>
  <% end %>
</div>